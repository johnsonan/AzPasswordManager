@using Microsoft.AspNetCore.Components

<MudCard>
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">Attributes</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>Name: @Context?.Item.Name</MudText>
        <MudText>Id: @Context?.Item.Id</MudText>
        <MudText>Username: @Context?.Item.Username</MudText>
        <MudText>Url: @Context?.Item.Url</MudText>
        <MudText>Created: @Context?.Item.Attributes.Created</MudText>
        <MudText>Updated: @Context?.Item.Attributes.Updated</MudText>
        <MudText>Enabled: @Context?.Item.Attributes.Enabled</MudText>
        <MudText>Created By: @Context?.Item.PersonalVaultOwner</MudText>
        <MudText>Recovery Level: @Context?.Item.Attributes.RecoveryLabel</MudText>
        <MudText>Vault Location: @Context?.Item.VaultLocation</MudText>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] public CellContext<ISecretItem>? Context { get; set; }
}
