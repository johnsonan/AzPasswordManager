@namespace AzPasswordManager.Features.Secrets.Components
@using Microsoft.AspNetCore.Components
@using MediatR
@inject IMediator Mediator

<MudTabs Elevation="2" Rounded="true" PanelClass="pa-1" ActivePanelIndexChanged="@(index => IndexChanged(index))">
    <MudTabPanel Text="Global Vault" Icon="@Icons.Material.Filled.Public">
    </MudTabPanel>
    <MudTabPanel Text="Personal Vault" Icon="@Icons.Material.Outlined.PermIdentity">
    </MudTabPanel>
    <MudTabPanel Text="Recycle Bin" Icon="@Icons.Material.Outlined.Delete">
    </MudTabPanel>
</MudTabs>

@code {
    [Parameter] public EventCallback<int> IndexChangedEvent { get; set; }

    public void IndexChanged(int index)
    {
        IndexChangedEvent.InvokeAsync(index);
    }
 }